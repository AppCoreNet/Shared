<Project>
  <PropertyGroup>
    <LocalPackageDirectory Condition=" '$(LocalPackageDirectory)' == '' ">$(MSBuildThisFileDirectory)/../../Packages</LocalPackageDirectory>
    <RestoreSources>
      $(LocalPackageDirectory);
      $(RestoreSources);
      https://api.nuget.org/v3/index.json
    </RestoreSources>
  </PropertyGroup>
  
  <Target Name="CopyPackage" AfterTargets="Pack">
    <Copy
      Condition=" '$(IsPackable)' == 'true' "
      SourceFiles="$(PackageOutputPath)/$(PackageId).$(PackageVersion).nupkg"
      DestinationFolder="$(LocalPackageDirectory)"
      />
  </Target>
</Project>