<Project>
  <PropertyGroup>
    <RestoreSources>
	  $(ExtraRestoreSources);
      $(RestoreSources);
      https://api.nuget.org/v3/index.json
    </RestoreSources>
    <LocalPackageDirectory Condition=" '$(LocalPackageDirectory)' == '' ">$(MSBuildThisFileDirectory)/../../Packages</LocalPackageDirectory>
    <RestoreSources Condition=" Exists($(LocalPackageDirectory)) ">
      $(LocalPackageDirectory);
      $(RestoreSources)
    </RestoreSources>
  </PropertyGroup>
</Project>